<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_image_landing" />

    <View
        android:background="#be000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/record_video_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_record"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/upload_video_selector"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginRight="1dp"
            android:text="@string/recordVideo"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/upload_video_btn"
            android:drawableLeft="@drawable/ic_gallery"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/upload_video_selector"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/uploadVideo"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />
    </LinearLayout>
</RelativeLayout>
